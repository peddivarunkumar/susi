  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :village, style: "display: block" %>
    <%= form.text_field :village %>
  </div>

  <div>
    <%= form.label :bags, style: "display: block" %>
    <%= form.text_field :bags %>
  </div>

  <div style="margin-bottom: 30px">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :comment, size: "50x4" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
