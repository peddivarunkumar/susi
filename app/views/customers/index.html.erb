<p style="color: green"><%= notice %></p>

<h1>Customers</h1>

<%= form_with(model: Customer.new, url: '/search', method: "get") do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :village, style: "display: block" %>
    <%= form.text_field :village %>
  </div>

  <div>
    <%= form.label :bags, style: "display: block" %>
    <%= form.text_field :bags %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.submit 'Search customer' %>
  </div>
<% end %>


<div id="customers">
  <table>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Village</th>
      <th>Bags</th>
      <th>Phone</th>
    </tr>

    
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.created_at %>
        </td>
        <td> 
          <%= customer.name %>
        </td>
        <td>
          <%= customer.village %>
        </td>
        <td>
          <%= customer.bags %>
        </td>
        <td>
          <%= customer.phone %>
        </td>
        <td>
          <p>
            <%= link_to "Show this customer", customer %>
          </p>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New customer", new_customer_path %>
