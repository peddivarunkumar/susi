<div id="<%= dom_id customer %>">
  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Village:</strong>
    <%= customer.village %>
  </p>

  <p>
    <strong>Bags:</strong>
    <%= customer.bags %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= customer.date.strftime("%d/%m/%y") if not customer.date.nil? %>
  </p>

  <p>
    <strong>comment:</strong>
    <%= customer.comment %>
  </p>



</div>
